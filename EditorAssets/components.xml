<Components>

	<Component name="Cv_TransformComponent">
		<Element name="Position" type="int" fieldNames="x,y,z" editorNames="X,Y,Z"/>
		<Element name="Rotation" type="float" fieldNames="radians" editorNames="Angle"/>
        <Element name="Scale" type="float" fieldNames="x,y" editorNames="X,Y"/>
        <Element name="Origin" type="float" fieldNames="x,y" editorNames="X,Y"/>
	</Component>
	
	<Component name="Cv_RigidBodyComponent">
		<Element name="Material" type="physicsMaterial" fieldNames="material" />
		<Element name="Physics" type="physicsProperties" />
        <Element name="Body" type="bodyProperties" />
        <Element name="CollisionShapes" type="physicsShapes" />
    </Component>
	
	<Component name="Cv_SpriteComponent">
		<Element name="Color" type="rgba" />
		<Element name="Visible" type="boolean" fieldNames="status"/>
		<Element name="Texture" type="file" fieldNames="resource" extensions="Image Files(*.PNG;*.JPG;)|*.PNG;*.JPG;|All files (*.*)|*.*"  />
		<Element name="Size" type="int" fieldNames="width,height" editorNames="Width,Height"/>
    <Element name="Animation" type="animationProperties" />
    <Element name="Mirrored" type="boolean" fieldNames="status" />
    <Element name="OnEndScript" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*" />
	</Component>
	
	<Component name="Cv_CameraComponent">
		<Element name="Properties" type="cameraProperties" />
	</Component>
  
  <Component name="Cv_SoundEmitterComponent">
    <Element name="SoundEffect" type="file" fieldNames="resource" extensions="Sound Files(*.WAV;)|*.WAV;|All files (*.*)|*.*"/>
		<Element name="Volume" type="float" fieldNames="value" editorNames="Value"/>
    <Element name="Pan" type="float" fieldNames="value" editorNames="Value"/>
    <Element name="Pitch" type="float" fieldNames="value" editorNames="Value"/>
    <Element name="Looping" type="boolean" fieldNames="status"/>
    <Element name="IsPositional" type="boolean" fieldNames="status"/>
    <Element name="AutoPlay" type="boolean" fieldNames="status"/>
	</Component>

  <Component name="Cv_SoundListenerComponent"/>
  
  <Component name="Cv_ScriptComponent">
    <Element name="InitScript" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*"/>
    <Element name="Script" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*"/>
    <Element name="Interval" type="float" fieldNames="value" editorNames="Value"/>
    <Element name="ExecuteOnce" type="boolean" fieldNames="status"/>
    <Element name="Paused" type="boolean" fieldNames="status"/>
	</Component>
  
  <Component name="Cv_ClickableComponent">
    <Element name="OnMouseUp" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*"/>
    <Element name="OnMouseDown" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*"/>
    <Element name="Size" type="int" fieldNames="width,height" editorNames="Width,Height"/>
    <Element name="Anchor" type="int" fieldNames="x,y" editorNames="X,Y"/>
    <Element name="Active" type="boolean" fieldNames="status"/>
	</Component>

  <Component name="Cv_TextComponent">
    <Element name="Color" type="rgba" />
    <Element name="Visible" type="boolean" fieldNames="status"/>
    <Element name="Font" type="file" fieldNames="resource" extensions="SpriteFont Files(*.XNB;)|*.XNB;|All files (*.*)|*.*"  />
    <Element name="Size" type="int" fieldNames="width,height" editorNames="Width,Height"/>
    <Element name="Text" type="string" fieldNames="text" editorNames="String ID"/>
    <Element name="HorizontalAlignment" type="comboBox" fieldNames="value" options="Left,Center,Right"/>
    <Element name="VerticalAlignment" type="comboBox" fieldNames="value" options="Top,Center,Bottom"/>
  </Component>
  
  <Component name="Cv_TransformAnimationComponent">
    <Element name="TransformAnimation" type="file" fieldNames="resource" extensions="XML Files(*.XML;)|*.XML;|All files (*.*)|*.*"  />
    <Element name="OnEndScript" type="file" fieldNames="resource" extensions="Lua Script Files(*.LUA;)|*.LUA;|All files (*.*)|*.*" />
    <Element name="Paused" type="boolean" fieldNames="status"/>
    <Element name="Looping" type="boolean" fieldNames="status"/>
    <Element name="ResetOnEnd" type="boolean" fieldNames="status"/>
  </Component>
	
</Components>